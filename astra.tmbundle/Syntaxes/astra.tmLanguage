<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>$schema</key>
    <string>https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json</string>
    <key>name</key>
    <string>ASTRA</string>
    <key>scopeName</key>
    <string>source.astra</string>
    <key>patterns</key>
    <array>
      <dict>
        <key>include</key>
        <string>#strings</string>
      </dict>
      <dict>
        <key>include</key>
        <string>#comments</string>
      </dict>
      <dict>
        <key>include</key>
        <string>#function-definitions</string>
      </dict>
      <dict>
        <key>include</key>
        <string>#numbers</string>
      </dict>
      <dict>
        <key>include</key>
        <string>#keywords</string>
      </dict>
    </array>
    <key>repository</key>
    <dict>
      <key>function-definitions</key>
      <dict>
        <key>patterns</key>
        <array>
          <!-- Match formula definitions -->
          <dict>
            <key>begin</key>
            <string>\b(formula)\s+([a-zA-Z_][a-zA-Z0-9_]*)\s*\(</string>
            <key>beginCaptures</key>
            <dict>
              <key>1</key>
              <dict>
                <key>name</key>
                <string>storage.type.function.astra</string>
              </dict>
              <key>2</key>
              <dict>
                <key>name</key>
                <string>entity.name.function.astra</string>
              </dict>
            </dict>
            <key>end</key>
            <string>\);</string>
            <key>name</key>
            <string>meta.function.definition.formula.astra</string>
            <key>patterns</key>
            <array>
              <dict>
                <key>include</key>
                <string>#parameter-types</string>
              </dict>
            </array>
          </dict>
          <!-- Match rule definitions -->
          <dict>
            <key>begin</key>
            <string>\b(?:(synchronized)\s+)?(rule)\s+([+!-]*[a-zA-Z_][a-zA-Z0-9_!]*)\s*\(</string>
            <key>beginCaptures</key>
            <dict>
              <key>1</key>
              <dict>
                <key>name</key>
                <string>storage.modifier.astra</string>
              </dict>
              <key>2</key>
              <dict>
                <key>name</key>
                <string>storage.type.function.astra</string>
              </dict>
              <key>3</key>
              <dict>
                <key>name</key>
                <string>entity.name.function.astra</string>
              </dict>
            </dict>
            <key>end</key>
            <string>\)</string>
            <key>name</key>
            <string>meta.function.definition.rule.astra</string>
            <key>patterns</key>
            <array>
              <dict>
                <key>include</key>
                <string>#parameter-types</string>
              </dict>
            </array>
          </dict>
        </array>
      </dict>
      <key>parameter-types</key>
      <dict>
        <key>patterns</key>
        <array>
          <!-- Match parameters with types and names -->
          <dict>
            <key>match</key>
            <string>\b(string|list|int|long|float|double|boolean|funct)\b\s+([a-zA-Z_][a-zA-Z0-9_]*)\b</string>
            <key>captures</key>
            <dict>
              <key>1</key>
              <dict>
                <key>name</key>
                <string>storage.type.parameter.astra</string>
              </dict>
              <key>2</key>
              <dict>
                <key>name</key>
                <string>variable.parameter.astra</string>
              </dict>
            </dict>
          </dict>
          <!-- Match parameters with types only -->
          <dict>
            <key>match</key>
            <string>\b(string|list|int|long|float|double|boolean|funct)\b</string>
            <key>name</key>
            <string>storage.type.parameter.astra</string>
          </dict>
          <!-- Match commas and whitespace -->
          <dict>
            <key>match</key>
            <string>,</string>
            <key>name</key>
            <string>punctuation.separator.parameter.astra</string>
          </dict>
          <dict>
            <key>match</key>
            <string>\s+</string>
          </dict>
        </array>
      </dict>
      <key>numbers</key>
      <dict>
        <key>patterns</key>
        <array>
          <!-- Match floating-point numbers -->
          <dict>
            <key>match</key>
            <string>\b\d+\.\d+(?:[eE][+-]?\d+)?\b</string>
            <key>name</key>
            <string>constant.numeric.float.astra</string>
          </dict>
          <!-- Match integers -->
          <dict>
            <key>match</key>
            <string>\b\d+\b</string>
            <key>name</key>
            <string>constant.numeric.integer.astra</string>
          </dict>
          <!-- Match hexadecimal numbers -->
          <dict>
            <key>match</key>
            <string>\b0[xX][0-9a-fA-F]+\b</string>
            <key>name</key>
            <string>constant.numeric.hex.astra</string>
          </dict>
        </array>
      </dict>
      <key>keywords</key>
      <dict>
        <key>patterns</key>
        <array>
          <!-- Control keywords -->
          <dict>
            <key>name</key>
            <string>keyword.control.astra</string>
            <key>match</key>
            <string>\b(if|while|foreach|forall|else|done|message|at_index|list_count|wait|try|recover)\b</string>
          </dict>
          <!-- Operators -->
          <dict>
            <key>name</key>
            <string>keyword.operator.astra</string>
            <key>match</key>
            <string>::|:-|&lt;-|\+|-|\*|/|%|!|@|\$|&amp;&amp;|\|\||==|!=|&lt;=|&gt;=|&lt;|&gt;</string>
          </dict>
          <!-- Other keywords -->
          <dict>
            <key>name</key>
            <string>keyword.other.astra</string>
            <key>match</key>
            <string>\b(package|agent|extends|import|module|rule|goal|types|formula|inference|body|initial|send|query|synchronized)\b</string>
          </dict>
          <!-- Built-in types -->
          <dict>
            <key>name</key>
            <string>storage.type.astra</string>
            <key>match</key>
            <string>\b(string|list|int|long|float|double|boolean|funct)\b</string>
          </dict>
          <!-- Constants -->
          <dict>
            <key>name</key>
            <string>constant.language.astra</string>
            <key>match</key>
            <string>\b(true|false)\b</string>
          </dict>
          <!-- Function calls -->
          <dict>
            <key>name</key>
            <string>entity.name.function.call.astra</string>
            <key>match</key>
            <string>\b([a-zA-Z_][a-zA-Z0-9_]*)\s*\(</string>
            <key>captures</key>
            <dict>
              <key>1</key>
              <dict>
                <key>name</key>
                <string>entity.name.function.call.astra</string>
              </dict>
            </dict>
          </dict>
        </array>
      </dict>
      <key>strings</key>
      <dict>
        <key>match</key>
        <string>"(?:\\.|[^"\\])*"</string>
        <key>name</key>
        <string>string.quoted.double.astra</string>
      </dict>
      <key>comments</key>
      <dict>
        <key>patterns</key>
        <array>
          <!-- Block comments -->
          <dict>
            <key>begin</key>
            <string>/\*</string>
            <key>beginCaptures</key>
            <dict>
              <key>0</key>
              <dict>
                <key>name</key>
                <string>punctuation.definition.comment.begin.astra</string>
              </dict>
            </dict>
            <key>end</key>
            <string>\*/</string>
            <key>endCaptures</key>
            <dict>
              <key>0</key>
              <dict>
                <key>name</key>
                <string>punctuation.definition.comment.end.astra</string>
              </dict>
            </dict>
            <key>name</key>
            <string>comment.block.astra</string>
          </dict>
          <!-- Line comments -->
          <dict>
            <key>match</key>
            <string>//.*$</string>
            <key>name</key>
            <string>comment.line.double-slash.astra</string>
          </dict>
        </array>
      </dict>
    </dict>
    <key>fileTypes</key>
    <array>
      <string>astra</string>
    </array>
  </dict>
</plist>
